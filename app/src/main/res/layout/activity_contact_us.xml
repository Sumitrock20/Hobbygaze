<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Have something to say? Get in touch"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:textSize="20sp"
    android:textColor="@color/btn_color"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Email: hello@hobbygaze.com"
        android:textSize="20sp"
        android:textColor="@color/btn_color"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Phone: +919480931554"
        android:textSize="20sp"
        android:textColor="@color/btn_color"/>



        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="To get listed on HobbyGaze,Click below"
            android:textSize="20sp"
            android:textColor="@color/btn_color"/>

        <Button
            android:id="@+id/btn_getlisted"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@null"
            android:text="Get Listed"
            android:textAllCaps="false"
            android:textColor="@color/btn_color"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>