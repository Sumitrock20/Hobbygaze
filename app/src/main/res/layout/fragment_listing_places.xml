<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:fadeScrollbars="false"
    android:scrollbars="vertical"
    android:layout_marginTop="80dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/place_image"
           />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wonder La, Mysore Road"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:id="@+id/tv1"
            android:layout_alignTop="@id/place_image">
        </TextView>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="220dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv2"
            android:text="Hejjala Post ,Bangalore, Karnataka - 562109"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_alignTop="@id/place_image"
           >
            </TextView>



        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Just For Fun > Dayouts > Amusement Park"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/tv3"
            android:layout_alignBottom="@id/place_image"
            android:layout_marginBottom="30dp">
        </TextView>

    </RelativeLayout>


    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HighLights"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/accent"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2022 Dry rides"

        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/black"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2022 Water rides"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/black"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2022 High thrill rides"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/black"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2022 Kids rides"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/black"/>





    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pricing"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/accent"/>


    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 857**"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/black"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link_pricing_details"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="@color/accent"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Hours of operation"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:gravity="bottom"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="16sp" />

